{% extends '@PrestaShop/Admin/Module/Includes/card_list.html.twig' %}

{% set overrideInfos = module.attributes.overrideInfos %}


{% block addon_description %}
    {% if overrideInfos.contains_overrides|length %}
        <h3>This module contains overrides</h3>
            <ul> 
                {% for override in overrideInfos.contains_overrides %}
                    <li> {{ override }}</li>
                {% endfor %}
            </ul>
    {% endif %}

    {% if overrideInfos.core_overrides|length or overrideInfos.theme_overrides|length %}
        <h3>This module hasbeen overrided</h3>
        {% if overrideInfos.theme_overrides|length %}
            <h4 class='ml-3'>Theme overrides</h4>
            <ul> 
                {% for override in overrideInfos.theme_overrides %}
                    <li> {{ override }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        {% if overrideInfos.core_overrides|length %}
            <h4 class='ml-3'>Core overrides</h4>
            <ul> 
            {% for override in overrideInfos.core_overrides %}
                <li> {{ override }}</li>
            {% endfor %}
            </ul>
        {% endif %}
    {% endif %}
{% endblock %}

{% block module_actions %}
    <button class='btn btn-danger-reverse btn-outline-danger' href='#' {% if overrideInfos.contains_overrides|length < 1 %} disabled {% endif %}>
        <i class="material-icons">delete</i>Remove overrides
    </button>
{% endblock %}
